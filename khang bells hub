-- Tạo ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Tạo Frame (Menu)
local menuFrame = Instance.new("Frame")
menuFrame.Size = UDim2.new(0.3, 0, 0.4, 0) -- Kích thước menu
menuFrame.Position = UDim2.new(0.35, 0, 0.3, 0) -- Vị trí menu
menuFrame.BackgroundColor3 = Color3.new(0, 0, 0) -- Màu nền đen
menuFrame.BorderSizePixel = 0 -- Ẩn viền
menuFrame.Visible = true -- Hiển thị menu ban đầu
menuFrame.Parent = screenGui

-- Tạo TextLabel (Chữ trong menu)
local menuText = Instance.new("TextLabel")
menuText.Size = UDim2.new(1, 0, 1, 0) -- Chiếm toàn bộ Frame
menuText.Text = "Đây là menu" -- Nội dung chữ
menuText.TextColor3 = Color3.new(1, 1, 1) -- Màu chữ trắng
menuText.BackgroundTransparency = 1 -- Nền trong suốt
menuText.Font = Enum.Font.SourceSans -- Font chữ
menuText.TextSize = 24 -- Kích thước chữ
menuText.Parent = menuFrame

-- Tạo ImageButton (Logo)
local logoButton = Instance.new("ImageButton")
logoButton.Size = UDim2.new(0.1, 0, 0.1, 0) -- Kích thước logo
logoButton.Position = UDim2.new(0.45, 0, 0.05, 0) -- Vị trí logo
logoButton.BackgroundTransparency = 1 -- Nền trong suốt
logoButton.Image = "rbxassetid://1234567890" -- Thay bằng ID hình ảnh logo của bạn
logoButton.Parent = screenGui

-- Biến để kiểm tra trạng thái menu
local isMenuVisible = true

-- Hàm ẩn/hiện menu
local function toggleMenu()
    isMenuVisible = not isMenuVisible
    menuFrame.Visible = isMenuVisible
end

-- Kết nối sự kiện nhấp vào logo
logoButton.MouseButton1Click:Connect(toggleMenu)
